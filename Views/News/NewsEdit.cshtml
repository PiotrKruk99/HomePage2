@{
    ViewData["Title"] = "Dodawanie i edycja wiadomości";
}

<h2>edycja wiadomości</h2>
<form><button type="submit" asp-controller="News" asp-action="AddArticleGet">Dodaj...</button></form>

@foreach (Article item in ViewBag.news)
{
    <p>
        <b>@item.Title</b><br>
        @Html.Raw(@item.Content)<br>
        <form method="post" asp-controller="News">
            <button type="submit" name="deleteId" value="@item.Id" asp-action="DeleteArticle">Usuń...</button>
            <button type="submit" name="editId" value="@item.Id" asp-action="EditArticle">Edytuj...</button>
        </form>
    </p>
}